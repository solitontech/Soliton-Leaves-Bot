{
    "name": "soliton-leaves-bot",
    "version": "1.0.0",
    "description": "Microsoft Teams bot for processing leave requests via email using AI",
    "main": "dist/server/server.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server/server.js",
        "dev": "DOTENV_PATH=.env.dev tsc && DOTENV_PATH=.env.dev nodemon dist/server/server.js",
        "dev:watch": "tsc --watch",
        "prod": "tsc && DOTENV_PATH=.env.prod node dist/server/server.js",
        "subscribe": "DOTENV_PATH=.env.dev node dist/graph-authentication/subscribe.js",
        "subscribe:prod": "DOTENV_PATH=.env.prod node dist/graph-authentication/subscribe.js",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist",
        "prebuild": "npm run clean",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "keywords": [
        "microsoft-teams",
        "bot",
        "leave-management",
        "email-parser",
        "openai",
        "microsoft-graph",
        "typescript"
    ],
    "author": "Soliton Technologies",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.6.5",
        "body-parser": "^1.20.2",
        "botbuilder": "^4.22.0",
        "dotenv": "^16.4.1",
        "express": "^4.18.2",
        "openai": "^4.28.0",
        "qs": "^6.11.2",
        "winston": "^3.19.0"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.6",
        "@types/express": "^4.17.25",
        "@types/node": "^20.19.30",
        "@types/qs": "^6.14.0",
        "nodemon": "^3.0.3",
        "typescript": "^5.9.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}